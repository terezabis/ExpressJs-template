<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>RentACar</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <link rel="icon" href="/favicon.ico?" />
</head>
</body class="preload">
<header>
  <nav>
    <img id="logo" src="/logo.png" alt="logo" />
    <ul id="main-nav">
      <li>
        <a href="/">home</a>
      </li>
      <li>
        <a href="/cars/all">all cars</a>
      </li>
      {{#if currentUser}}
       <li>
        <a href="/cars/add">add car</a>
      </li>
      <li>
        <a href="/users/profile/me">profile</a>
      </li>
      {{/if}}
    </ul>
    <ul id="user">
      {{#if currentUser}}
      <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
      {{else}}
      <li>
        <a href="/users/register">register</a>
      </li>
      <li>
        <a href="/users/login">login</a>
      </li>
      {{/if}}
    </ul>
  </nav>
</header>
<section id="main-container">
  <main>
    {{#if globalError}}
    <span>{{globalError}}</span> {{/if}} 
    {{#if successMessage}}
    <span>{{successMessage}}</span> {{/if}} 
    {{{body}}}
  </main>
</section>
<footer>
  <span>Authentication exercise</span>
</footer>
<script>
  document.onload = function () {
    document
      .querySelector('body')
      .classList
      .remove('preload');
  }
</script>
</body>

</html>